<section class="container">
  <div class="posts">

    <% if flash.any? %>
      <% flash.each do |type, msg| %>
        <div>
          <%= msg %>
        </div>
      <% end %>
    <% end %>

    <% @username.each do |name| %>
    <h1 class="margin">Posts by: <%= name.username %></h1>
    <% end %>

    <a class="new_post_link" href="/posts/new">New Post</a>

    <%= render partial: 'posts/post', collection: @users_posts %>

  </div>
</section>

