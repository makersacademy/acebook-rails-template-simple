<h2>Minimum requirement 10 characters if not, won't it save</h2>

<%= form_for Post.new do |f| %>
  <div class="form-group">
    <%= f.text_area :content %>
  </div>
  <div class="form-group">
    <%= f.text_field :users_id, value: current_user.id, class:'d-none'
  </div> %>
  <br>
  <div class="text-center">
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>

