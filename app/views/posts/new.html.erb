<div class="d-flex align-itmes-center justify-content-center">
<h2>What's on your mind?</h2>
</div>
<div class="d-flex align-itmes-center justify-content-center">
 <small class="text-muted">Create a post</small>
</div>
<div class="d-flex align-itmes-center justify-content-center">

<%= form_for Post.new do |f| %>
  <div class="form-group">
    <%= f.text_area :content %>
  </div>

  <div class="form-group">
    <%= f.file_field :post_photo, accept: 'image/png, image/jpeg' %>
  </div>

  <div class="form-group">
    <%# <%= f.text_field :users_id, value: current_user.id, class:'d-none' %>
  </div>
  <div class="d-flex align-itmes-center justify-content-center">
  <br>
  <div class="text-center">
    <%= f.submit 'Create Post', class: 'btn btn-primary' %>
  </div>
<% end %>

