<% if logged_in? %>
    <h2>Hi <%= current_user.name %>
    </h2>
<% end %>

<% if logged_in? %>
<%= form_for @post do |form| %>
  <%= form.label :message %>
  <%= form.text_field :message %>

  <%= form.hidden_field :user_id, value: session[:current_user_id] %>
  
  <%= form.submit "Submit" %>
<% end %>
<% end %>
