<a class="new_post_link" href="/posts/new">New Post</a>

<% @posts.each do |post| %>

  <div class="post">
    <body>
    <article id=<%= post.id %> href=<%= "/posts/#{post.id}" %>>
      <h3><a id="username"><%= post.user.username %></a></h3>
      <a id="post_message"> <%= post.message %> </a>
    </article>
    </body>
  </div>
  <br>
<% end %>
