<!DOCTYPE html>
<html>
  <head>
    <title>Acebook</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    
    <%= session[:light_mode] = true%>
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <% if session[:light_mode] %>
      <%= stylesheet_link_tag 'light_colours', media: 'all' %>
    <% else %>
      <%= stylesheet_link_tag 'dark_colours', media: 'all' %>
    <% end %>
    
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render "layouts/navbar" %>
    <%= yield %>
  </body>

</html>
