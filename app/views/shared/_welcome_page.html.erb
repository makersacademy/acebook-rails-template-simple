
<div class="center">

<!-- left column, welcome image -->
  <div class="profile row">
    <div class="col-md-7 logo">
      <a class="navbar-brand" id="welcome-logo" href="/">acebook</a><br>
      <h3>Acebook helps you connect and share with the people in your life.</h3>
    </div>

<!-- right column, login form -->
  <div class="col-md-5 login_form"> 
            <main class="form-signin">
          <h1 class="h3 mb-3 fw-normal"> </h1>
        <%= form_with url: sign_in_path, local: true do |f| %>

          <div class="form-floating">
            <%= f.text_field :email, :class => 'form-control', :id => 'floatingEmail', :placeholder => 'user@example.com' %> 
            <label for="floatingEmail">Email address</label>
          </div>

          <div class="form-floating">
            <%= f.password_field :password, :class => 'form-control', :id => 'floatingPassword', :placeholder => 'Password' %>
            <label for="floatingPassword">Password</label>
          </div>

          <%= f.submit 'Sign In', :class => 'w-100 btn btn-lg btn-primary' %> 

          <hr/>
         <%= link_to 'Create New Account', sign_up_path, class: 'w-100 btn btn-lg btn-success' %>
          <% end %> 
          <p class="mt-3 mb-3">Create a page and join the community</p>
        </main>
  </div>
</div>

