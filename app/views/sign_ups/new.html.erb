<h1>Sign-up</h1>
<%= form_with model: @user, url: sign_ups_path, local: true do |form| %>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div>
    <%= form.label :password_confirmation %>
    <%= form.password_field :password_confirmation %>
  </div>
  <div>
    <%= form.submit "Sign-up"%>
  </div>
<% end %>
