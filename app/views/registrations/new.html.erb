<h1>Sign up</h1>

<%= form_with model: @user, url: sign_up_path, local: true do |form| %>
  <% if @user.errors.any? %>
  <div class="alert alert-danger">
  <% @user.errors.full_messages.each do |message| %>
    <div> <%= message %></div>
    <% end %>
  </div>
  <% end %>

  <div class='mb-3'>
    <%= form.label :first_name %>
    <%= form.text_field :first_name, class:'form-control', placeholder:"Steve"%>
  </div>

  <div class='mb-3'>
  <%= form.label :last_name %>
    <%= form.text_field :last_name, class:'form-control', placeholder:"Jobs" %>
  </div>

  <div class='mb-3'>
    <%= form.label :email %>
    <%= form.text_field :email, class:'form-control', placeholder:"steve@apple.com" %>
  </div>

  <div class='mb-3'>
    <%= form.label :password %>
    <%= form.password_field :password, class:'form-control', placeholder:"password" %>
  </div>

  <%= form.label "Profile photo" %>
  <%= form.file_field :avatar %><br>

  <div class='mb-3'>
    <%= form.submit "Sign Up", class:'btn btn-primary' %>
  </div>

<% end %>

