<body> Please enter a comment:

<%= form_with(model: @comments, local: true) do |f| %>
  <br>
  <br>
  <%= f.hidden_field :post_id, value: "#{params[:post_id]}" %>
  <br>
  <br>
  <%= f.label :content, "content:" %>
  <%= f.text_field :content %>
  <br>
  <br>
  <%= f.submit "Add comment" %>
<% end %>

