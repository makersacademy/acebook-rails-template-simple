<% if @user.id == session[:user_id]%>
<div class="center-block">
  <div class="form-group-wrap">
  <h1> Edit your account details below: </h1>

  <%= form_for @user do |form| %>
    <div class="form-group">
      <%= form.label :username, class: "control-label"%><br>
      <%= form.text_field :username, class:"form-control" %>
      <% @user.errors.full_messages_for(:username).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :email, class: "control-label"%><br>
      <%= form.email_field :email, class: "form-control"%>
      <% @user.errors.full_messages_for(:email).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :password, class: "control-label"%><br>
      <%= form.password_field :password, class: "form-control" %>
      <% @user.errors.full_messages_for(:password).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>

    <div class="form-group">
      <%= form.label :avatar, "Choose a profile picture", class: "control-label"  %>
      <%= form.file_field :avatar, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit "Update Account", class: "btn btn-primary" %>
    </div>
  <% end %>
  </div>
  </div>
  <%else%>

  <h1> Unauthorised access </h1>

  <%end%>