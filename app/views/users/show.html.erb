<% session[:current_profile] = @user.id %>

<h1>Welcome to <span style="color: #191970">Blue-Magpie Acebook!</span></h1>
<h1><%= @user.name[-1, 1] == "s" ? "#{@user.name}'" : "#{@user.name}'s" %> profile</h1>

<p>Your Wall</p>

  <div class="id_post_view">
    <% @posts.reverse.each do |post| %>
      <% if post.loc_id == @user.id %>
        <div class="post_view">
          User <%= post.name %>: <%= link_to post.message, post %>
          <p><%= post.likes.count %> <%= (post.likes.count) == 1 ? "Like" : "Likes" %></p>
        </div>
      <% end %>
    <% end %>
  </div><br>

  <div> 
    <%= link_to new_post_path do %>
      New post
    <% end %>
  </div><br>

  <div>
    Your Friends:
    <ul>
      <% @users.each do |user| %>
        <% if user.id != session[:user_id] %>
          <li><%= link_to user.name, user  %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
